
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .block-27 a:hover {
            background: #82ae46;
            border: 1px solid #82ae46;
            color: #fff;
            cursor: pointer;
        }
    </style>

}

<div class="hero-wrap hero-bread" style="background-image: url('/Content/images/bg_1.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Trang chủ</a></span> <span>Sản phẩm</span></p>
                <h1 class="mb-0 bread">Sản phẩm</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section">
    <div class="container" id="Product" style="display: none">
        <div class="row justify-content-center">
            <div class="col-md-10 mb-5 text-center">
                <ul class="product-category">
                    <li><a href="#" class="product-cate-all" v-on:click="getListProductByCate(-1, $event)">Tất cả</a></li>
                    <li v-for="cate in ListCategoryActive"><a href="#" v-on:click="getListProductByCate(cate.CategoryID, $event)">{{ cate.CategoryName }}</a></li>
                </ul>
            </div>
        </div>
        <div class="sidebar-box row justify-content-end" style="margin-left: 0; padding-right: 0">
            <div class="search-form col-md-6" style="padding-right: 0">
                <div class="form-group">
                    <span class="icon ion-ios-search"></span>
                    <input type="text" class="form-control" v-model="txtSearch" v-on:keypress.enter="getListProduct()" placeholder="Tìm kiếm...">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-lg-3" v-for="item in list">
                <div class="product">
                    <a href="#" class="img-prod">
                        <img class="img-fluid" style="width: 100%; height: 204px" v-bind:src="item.ProductImages" alt="Ảnh sản phẩm">
                        <div class="overlay"></div>
                    </a>
                    <div class="text py-3 pb-4 px-3 text-center">
                        <h3><a href="#">{{ item.ProductName }}</a></h3>
                        <div class="d-flex">
                            <div class="pricing">
                                <p class="price"><span>VNĐ {{ item.ProductPrice }}</span></p>
                            </div>
                        </div>
                        <div class="bottom-area d-flex px-3">
                            <div class="m-auto d-flex">
                                <a v-bind:href="'/Product/Details?id='+ item.ProductID" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                    <span><i class="ion-ios-menu"></i></span>
                                </a>
                                <a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                    <span><i class="ion-ios-cart"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {

    <script src="~/Scripts/Product/Product.js"></script>
}

