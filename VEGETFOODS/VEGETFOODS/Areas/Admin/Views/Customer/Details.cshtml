@using VEGETFOODS
@using VEGETFOODS.Models
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <style>
        .content-wrapper .header-detail {
            flex-direction: column;
        }
    </style>
}

<div class="content-wrapper" id="MyCustomer">
    <div class="header-detail">
        <a href="/Admin/Customer/Index" class="link-list"> < Danh sách khách hàng</a>
        <span class="name-title mt-8"> Thông tin khách hàng </span>
    </div>
    <div class="content-detail">
        <div class="content-detail-head"><i class="fas fa-info-circle"></i>&nbsp;&nbsp;&nbsp; Thông tin khách hàng</div>
        <div class="content-item">
            <label class="content-label">Tên khách hàng</label>
            <input class="content-input" type="text" v-model="UserFullName" readonly />
        </div>
        <div class="content-item">
            <label class="content-label">Tên đăng nhập</label>
            <input class="content-input" type="text" v-model="UserCode" readonly />
        </div>
        <div class="content-item">
            <label class="content-label">Email</label>
            <input class="content-input" type="text" v-model="UserEmail" readonly />
        </div>
        <div class="content-item">
            <label class="content-label">Số điện thoại</label>
            <input class="content-input" type="text" v-model="UserPhone" readonly />
        </div>
        <div class="content-item">
            <label class="content-label">Địa chỉ</label>
            <input class="content-input" type="text" v-model="UserAddress" readonly />
        </div>
        <div class="content-item">
            <label class="content-label">Active</label>
            <label class="switch">
                <input type="checkbox" v-model="IsActive">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="btn-update">
            <button v-on:click="updateCustomer()" class="btn-main-color">Hoàn thành</button>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        var UserCode = '@ViewBag.UserCode';
        debugger
    </script>
    <script src="~/Scripts/Customer/MyCustomer.js"></script>
}

